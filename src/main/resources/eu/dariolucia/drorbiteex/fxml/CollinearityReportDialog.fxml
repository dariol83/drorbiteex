<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.drorbiteex.fxml.CollinearityReportDialog">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <Label fx:id="titleLabel" text="---" />
                  <Region minHeight="0.0" prefHeight="0.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" prefWidth="80.0" text="Export..." />
               </children>
            </HBox>
            
            <Label text="Filter Orbit" />
            <TextField fx:id="filterText" maxWidth="400.0" minWidth="400.0" />
            <HBox>
               <children>
                  <Label prefHeight="24.0" text="Time Period:" />
                  <Label fx:id="timePeriodLabel" maxWidth="1.7976931348623157E308" prefHeight="24.0" text="---" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="5" VBox.vgrow="NEVER">
               <children>
                  <TableView fx:id="table">
                     <columns>
                        <TableColumn maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Time" />
                        <TableColumn maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Orbit" />
                        <TableColumn maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Angular Sep." />
                     </columns>
                  </TableView>
                  <VBox minWidth="400.0" spacing="5">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <children>
                        <fx:include fx:id="polarPlot" source="PolarPlot.fxml" />
                        <HBox>
                           <children>
                              <Label maxWidth="140.0" minWidth="140" text="Reference Orbit EL/AZ" />
                              <Label fx:id="referenceElAzLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" text="---" textAlignment="RIGHT" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label maxWidth="140" minWidth="140" text="Target Orbit EL/AZ" />
                              <Label fx:id="targetElAzLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" text="---" textAlignment="RIGHT" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label maxWidth="140" minWidth="140" text="Angular Separation" />
                              <Label fx:id="angularSeparationLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" text="---" textAlignment="RIGHT" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="24.0" text="Number of collinearity events (filtered)  " />
                  <Label fx:id="nbEventsLabel" maxWidth="1.7976931348623157E308" prefHeight="24.0" text="---" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.drorbiteex.fxml.RangePickerPanel">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Min Value" minWidth="100.0" prefWidth="100.0" />
                  <TextField fx:id="minText" minWidth="100.0" prefWidth="100.0" />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Label text="Max Value" minWidth="100.0" prefWidth="100.0" />
                  <TextField fx:id="maxText" minWidth="100.0" prefWidth="100.0" />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onApplyAutorangeAction" text="Autorange" HBox.hgrow="ALWAYS" />
                  <Button fx:id="applyRangeButton" mnemonicParsing="false" onAction="#onApplyRangeAction" text="Apply" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>

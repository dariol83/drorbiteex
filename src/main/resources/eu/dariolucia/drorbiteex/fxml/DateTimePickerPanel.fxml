<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.drorbiteex.fxml.DateTimePickerPanel">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <DatePicker fx:id="datePicker" minWidth="168.0" prefWidth="168.0" />
                  <Button mnemonicParsing="false" onAction="#onApplyAction" prefWidth="50.0" text="Apply" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Spinner fx:id="hours" editable="true" minWidth="56.0" prefWidth="56.0" />
                  <Spinner fx:id="minutes" editable="true" minWidth="56.0" prefWidth="56.0" />
                  <Spinner fx:id="seconds" editable="true" minWidth="56.0" prefWidth="56.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
